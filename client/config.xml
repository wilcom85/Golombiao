<?xml version="1.0" encoding="UTF-8"?> 
<widget xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0" 
	id="com.phonegap.pgbfbtest" 
	version="1.0.0">
	
    <name>
        Golombiao
    </name>
    <description>
        Aplicacion de Colombia Joven para Golombiao
    </description>

	<!-- FB Connect Section -->
	<gap:plugin name="com.phonegap.plugins.facebookconnect">
		<param name="APP_ID" value="431026877004103" />
   		<param name="APP_NAME" value="GolombiaoApp" />
	</gap:plugin>
	
    <icon src="images/icons/icon-57.png"          gap:platform="ios" width="57"  height="57"  />
    <icon src="images/icons/icon-72.png"       gap:platform="ios" width="72"  height="72"  />
    <icon src="images/icons/icon-57-2x.png"    gap:platform="ios" width="114" height="114" />
    <icon src="images/icons/icon-72-2x.png" gap:platform="ios" width="144" height="144" />

<icon gap:platform="ios" height="57" src="images/icons/golombiaoIcon.png" width="57" />
<icon gap:platform="ios" height="72" src="images/icons/golombiaoIcon.png" width="72" />
<icon gap:platform="ios" height="114" src="images/icons/golombiaoIcon.png" width="114" />
<icon gap:platform="ios" height="144" src="images/icons/golombiaoIcon.png" width="144" />
<icon gap:platform="winphone" gap:role="background" src="images/icons/golombiaoIcon.png" />
<gap:splash gap:density="ldpi" gap:platform="android" src="images/splash/LDPI.png" />
<gap:splash gap:density="mdpi" gap:platform="android" src="images/splash/medium.png" />
<gap:splash gap:density="hdpi" gap:platform="android" src="images/splash/HDPI.png" />
<gap:splash gap:density="xhdpi" gap:platform="android" src="images/splash/XHDPI.png" />
